{
  "name": "compliance-checker",
  "displayName": "AI Compliance Checker",
  "description": "Automatically enforce compliance rules before saving files",
  "version": "0.1.0",
  "publisher": "just-daily-ops",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "compliance.check",
        "title": "Run Compliance Check"
      },
      {
        "command": "compliance.enable",
        "title": "Enable Compliance Checks"
      },
      {
        "command": "compliance.disable",
        "title": "Disable Compliance Checks"
      },
      {
        "command": "compliance.showStatus",
        "title": "Show Compliance Status"
      }
    ],
    "configuration": {
      "title": "Compliance Checker",
      "properties": {
        "compliance.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable compliance checks"
        },
        "compliance.strictMode": {
          "type": "boolean",
          "default": false,
          "description": "Block saves on warnings (not just violations)"
        },
        "compliance.checkOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Run pre-execution checks before saving files"
        },
        "compliance.checkOnChange": {
          "type": "boolean",
          "default": true,
          "description": "Run post-execution checks after file changes"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^18.0.0",
    "typescript": "^4.9.0"
  }
}

